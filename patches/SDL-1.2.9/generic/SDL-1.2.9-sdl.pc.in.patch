+exec_prefix=${prefix}
+libdir=${exec_prefix}/lib
+includedir=${prefix}/include/SDL
+
+Name: sdl
+Description: SDL 1.2.9 
+Version: 1.2.9
+Requires:
+Conflicts:
+Libs: -L${libdir} @SDL_LIBS@ @SHARED_SYSTEM_LIBS@
