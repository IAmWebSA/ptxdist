From: Marc Kleine-Budde <mkl@pengutronix.de>
Subject: Add ${SYSROOT} capability

Signed-off-by: Marc Kleine-Budde <ml@pengutronix.de>

---
 src/ccgnu2-config.in |    8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

Index: commoncpp2-1.3.25/src/ccgnu2-config.in
===================================================================
--- commoncpp2-1.3.25.orig/src/ccgnu2-config.in
+++ commoncpp2-1.3.25/src/ccgnu2-config.in
@@ -17,11 +17,11 @@ ccload="@DYN_LOADER@"
 ccstd="@XML_LIBS@ @ZSTREAM_LIBS@"
 prefix="@prefix@"
 exec_prefix="@exec_prefix@"
-libdir="-L@libdir@"
+libdir="-L${SYSROOT}@libdir@"
 
 includedir="@includedir@"
 ccincludedir="@ccincludedir@"
-incpath="-I${ccincludedir}"
+incpath="-I${SYSROOT}${ccincludedir}"
 
 usage()
 {
@@ -49,7 +49,7 @@ fi
 while test $# -gt 0 ; do
 	case "$1" in
 	--prefix)
-		echo @prefix@
+		echo ${SYSROOT}@prefix@
 		;;
 	--version)
 		echo @VERSION@
@@ -73,7 +73,7 @@ while test $# -gt 0 ; do
 		echo -lccext2 $ccstd
 		;;
 	--includes)
-		echo -I$includedir -I$ccincludedir
+		echo -I${SYSROOT}$includedir -I${SYSROOT}$ccincludedir
 		;;
 	--dyn | --dso)
 		echo $ost_cv_dynloader
