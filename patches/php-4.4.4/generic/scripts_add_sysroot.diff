# Description:
#
# add sysroot support to pkg-config like scripts
#
---
 scripts/php-config.in |    4 ++--
 scripts/phpize.in     |    6 +++---
 2 files changed, 5 insertions(+), 5 deletions(-)

Index: php-4.4.4/scripts/php-config.in
===================================================================
--- php-4.4.4.orig/scripts/php-config.in
+++ php-4.4.4/scripts/php-config.in
@@ -1,8 +1,8 @@
 #! /bin/sh
 
-prefix="@prefix@"
+prefix="${SYSROOT}@prefix@"
 version="@PHP_VERSION@"
-includedir="@includedir@/php"
+includedir="${SYSROOT}@includedir@/php"
 includes="-I$includedir -I$includedir/main -I$includedir/TSRM -I$includedir/Zend"
 ldflags="@PHP_LDFLAGS@"
 libs="@EXTRA_LIBS@"
Index: php-4.4.4/scripts/phpize.in
===================================================================
--- php-4.4.4.orig/scripts/phpize.in
+++ php-4.4.4/scripts/phpize.in
@@ -3,8 +3,8 @@
 # Variable declaration
 prefix='@prefix@'
 exec_prefix="`eval echo @exec_prefix@`"
-phpdir="`eval echo @libdir@`/build"
-includedir="`eval echo @includedir@`/php"
+phpdir="${SYSROOT}`eval echo @libdir@`/build"
+includedir="${SYSROOT}`eval echo @includedir@`/php"
 builddir="`pwd`"
 
 FILES_BUILD="mkdep.awk scan_makefile_in.awk shtool libtool.m4"
@@ -127,7 +127,7 @@ phpize_copy_files()
 phpize_replace_prefix()
 {
   sed \
-  -e "s#@prefix@#$prefix#" \
+  -e "s#@prefix@#${SYSROOT}$prefix#" \
   < "$phpdir/phpize.m4" > configure.in
 }
 
