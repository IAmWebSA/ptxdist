# checker configuration

cd $(dirname $0)
PTXDIST_TOPDIR=$(pwd)/../../

# basic functions
show_message(){
name="$1"
name="${name:=unset}"
description="$2"
description="${description:=unset}"
message="$3"
message="${message:=OK}"

cat << _EOF_
--------------->  $name  <---------------
Description: 
$description

Message:
$message
-------------->  /$name/  <--------------
_EOF_
}
