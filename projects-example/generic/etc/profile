#
# /etc/profile
#
# $Id$
#

export PATH="$PATH:/usr/bin:/bin:/sbin"

#umask 022

# This fixes the backspace when telnetting in.
if [ "$TERM" != "linux" ]; then
        stty erase ^H
fi

PS1=@PS1@
PS2=@PS2@
PS4=@PS4@

alias vim='vi'
alias ll='ls -l'
alias ..='cd ..'
alias ...='cd ../..'
alias md='mkdir'
alias rd='rmdir'

# Exec local profile

if [ -e "/etc/profile.local" ]; then
	echo "running /etc/profile.local"
	. /etc/profile.local
fi

