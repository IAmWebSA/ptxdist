config BB_CONFIG_ADDUSER
	bool "adduser"
	default n
	help
	  Please submit a patch to add help text for this item.

config BB_CONFIG_DELUSER
	bool "deluser"
	default n
	help
	  Please submit a patch to add help text for this item.

config BB_CONFIG_GETTY
	bool "getty"
	default n
	help
	  Please submit a patch to add help text for this item.

config BB_CONFIG_LOGIN
	bool "login"
	default n
	help
	  Please submit a patch to add help text for this item.

config BB_CONFIG_FEATURE_SECURETTY
