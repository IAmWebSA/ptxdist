menu	"Cross Toolchain     "

config BUILD_CROSSCHAIN
	bool
	prompt "Build Cross Toolchain"
	default y

config CROSSCHAIN_CHECK
	string
	prompt "Check for specific gcc version"
	default "2.95.3"
	depends on !BUILD_CROSSCHAIN
	help
	  PTXdist calls your cross compiler with -dumpversion and
	  compares the output with this string. This should help
	  to avoid compilation with the wrong compiler version 
	  when you use your own external toolchain. 

choice
	prompt "binutils Version"
		default 2.13.2.1
		depends on BUILD_CROSSCHAIN

	config BINUTILS_2_13_2_1
		bool
		prompt "2.13.2.1"
	
	config BINUTILS_2_14
		bool
		prompt "2.14    "
		depends on ARCH_ARM || ARCH_X86
	config BINUTILS_2_15
		bool
		prompt "2.15    "
endchoice

choice
	prompt "GCC      Version"
		default GCC_3_2_3 if ARCH_X86
		depends on BUILD_CROSSCHAIN

	config GCC_2_95_3
		bool
		prompt "2.95.3  "
		depends on ARCH_X86 || ARCH_ARM || ARCH_ARM_NOMMU || ARCH_SPARC

	config GCC_3_2_3
		bool
		prompt "3.2.3   "
		depends on ARCH_X86 || ARCH_PPC || ARCH_SPARC || ARCH_MIPS || ARCH_CRIS || ARCH_PARISC || ARCH_SH

	config GCC_3_3_2
		bool
		prompt "3.3.2   "
		depends on ARCH_X86 || ARCH_ARM
	
	config GCC_3_4_0
		bool
		prompt "3.4.0   "
		depends on ARCH_X86 || ARCH_ARM || ARCH_PPC
	
	
endchoice

config GCC_2
	bool
	default y if GCC_2_95_3

config GCC_3
	bool
	default y if GCC_3_2_3
	default y if GCC_3_3_2

config GCC_SHARED
	bool
	prompt "  build gcc shared"
	default y
	depends on BUILD_CROSSCHAIN

config GCC_MULTILIB
	bool
	prompt "  build gcc with multilib support"
	default n
	depends on BUILD_CROSSCHAIN
	help
	  RSC: if I understand this correctly this option defines, for
	  example, that libgcc.a can support soft-float and hard-float
	  at the same time. Feel free to document this better if you
	  know what it _really_ means :-) 

config XCHAIN-DISTCC
	bool
	prompt "Build distcc"
	default n

config NASM
	bool
	prompt "x86 NASM"
	depends on ARCH_X86

config XCHAIN-SCONS
	bool
	prompt "Build scons (see help)"
	help
		Requires Python-1.6 or later and Python distutils on the Host,
		these tools are not (yet) part of ptxdist
endmenu
