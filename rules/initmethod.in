## SECTION=rootfs

menu "init                          "

choice
	prompt "init method"

	config INITMETHOD_BBINIT
		bool
		select BUSYBOX_HOSTNAME
		select BUSYBOX_RUN_PARTS
		prompt "busybox init    "

	config INITMETHOD_UPSTART
		bool
		depends on BROKEN
		prompt "upstart         "

	config INITMETHOD_INITNG
		bool
		depends on BROKEN
		prompt "init ng         "

endchoice

source "generated/initmethod.in"

endmenu

