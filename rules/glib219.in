## SECTION=multimedia_gtk

menuconfig GLIB219
	tristate
	prompt "glib 2.19                     "
	select LIBICONV		if GLIB219__LIBICONV_GNU
	select GETTEXT		if GLIB219__GETTEXT_GETTEXT
	select GETTEXT_DUMMY	if GLIB219__GETTEXT_DUMMY
	select HOST_GLIB219
	help
	  GLib is a library containing many useful C routines for things
	  such as trees, hashes, lists, and strings. It is a useful
	  general-purpose C library used by projects such as GTK+, GIMP,
	  and GNOME.

if GLIB219

choice
	prompt "iconv variant  "
	default GLIB219__LIBICONV_GNU

	config GLIB219__LIBICONV_GNU
		bool
		prompt "gnu (libiconv)"

	config GLIB219__LIBICONV_NATIVE
		bool
		prompt "native        "

endchoice

choice
	prompt "gettext variant"
	default GLIB219__GETTEXT_NONE

	config GLIB219__GETTEXT_NONE
		bool
		prompt "not needed    "

	config GLIB219__GETTEXT_GETTEXT
		bool
		prompt "gnu (gettext) "

	config GLIB219__GETTEXT_DUMMY
		bool
		prompt "dummy         "

endchoice

endif
