menu	"C Library           "

choice
        prompt "Which C library do you want to use?"
        default GLIBC
	
	config GLIBC
		bool
 		prompt "GLIBC"
 		depends on !ARCH_NOMMU
    
	config UCLIBC
		bool
 		prompt "uClibc"
endchoice

comment "C Library options"

choice
	prompt "C-Lib Version"
		default GLIBC_2_2_5
	
	config GLIBC_2_2_5
		bool
		prompt "2.2.5"
		depends on GLIBC

	config GLIBC_2_2_4
		bool
		prompt "2.2.4"
		depends on GLIBC
		depends on ARCH_X86

	config GLIBC_2_2_3
		bool
		prompt "2.2.3"
		depends on GLIBC
		depends on ARCH_X86

	config UCLIBC_0_9_19
		bool
		prompt "0.9.19"
		depends on UCLIBC

	config UCLIBC_0_9_20
		bool
		prompt "0.9.20"
		depends on UCLIBC
endchoice

source "rules/glibc.in"

source "rules/uclibc.in"          

endmenu
