comment "Scripting Languages"

config PHP
	bool
	prompt "PHP4"

config PHP_CLI
	bool
	prompt "Build CLI version of PHP"
	depends on PHP

config PHP_APACHE
	bool
	prompt "Build shared Apache 1.x module"
	depends on PHP && APACHE

config PHP_APC
	bool
	depends on BROKEN
	prompt "Build Alternative PHP-cache"
	depends PHP

comment "php-apc is broken, please send a patch"
	depends on !BROKEN

comment "Python requires libdl on the target (see C Library)"
	depends on !GLIBC_DL && !UCLIBC_DL

config PYTHON23
	bool
	prompt "Python 2.3"
	depends on GLIBC_DL || UCLIBC_DL
	select GLIBC_UTIL if GLIBC
	select GCCLIBS_CXX

config PYTHON24
	bool
	prompt "Python 2.4"
	depends on GLIBC_DL || UCLIBC_DL
	select GLIBC_UTIL if GLIBC
	select GCCLIBS_CXX

