comment "Scripting Languages"

config PHP
	bool
	prompt "PHP4"

config PHP_CLI
	bool
	prompt "Build CLI version of PHP"
	depends on PHP

config PHP_APACHE
	bool
	prompt "Build shared Apache 1.x module"
	depends on PHP && APACHE

config PHP_APC
	bool
	depends on BROKEN
	prompt "Build Alternative PHP-cache"
	depends PHP

comment "php-apc is broken, please send a patch"
	depends on !BROKEN

source "rules/python.in"
source "rules/python24.in"
