# bind 9 configuration

menuconfig BIND
	prompt "bind 9              "
	bool

config BIND_THREADS
	bool
	prompt "enable threads"
	depends on BIND && GLIBC_PTHREADS

config BIND_CRYPTO
	bool
	prompt "enable DNSSEC"
	depends on BIND
	select OPENSSL

config BIND_IPV6
	bool
	prompt "enable IPv6"
	depends BIND

