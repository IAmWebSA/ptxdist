#

source "rules/cppunit.in"
source "rules/gdb.in"

config KSYMOOPS
	bool
	prompt "ksymoops"
	default n

config LTT
	bool
	depends on BROKEN
	prompt "ltt: Linux Trace Toolkit"
	default n

comment "LTT is broken, please send a patch"
	depends on !BROKEN

source "rules/binutils.in"

config MEMTEST
	bool 
	prompt "memtest"
	default n

config MEMTESTER
	bool 
	prompt "memtester"
	default n
	help
	  Memory tester written by Charles Cazabon. See
	  http://pyropus.ca/software/memtester/ for more
	  info. This test has much more sophisticated
	  test patterns than the one above.

config OPROFILE
	bool
	depends on POPT && LIBBFD
	prompt "oprofile"
	default n

config STRACE
	bool
	prompt "strace"
	default n

config STRACE_SHARED
	bool "shared strace"
	default y
	depends on STRACE

source "rules/valgrind.in"

