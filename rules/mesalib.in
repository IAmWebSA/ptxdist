## SECTION=multimedia_xorg_support_libs

menuconfig MESALIB
	tristate
	prompt "MesaLib"
	select LIBDRM
	select DRI2PROTO	
	select XORG_LIB_X11
	select XORG_LIB_XEXT
	select XORG_LIB_XXF86VM
	select XORG_LIB_XDAMAGE
	select XORG_LIB_XFIXES
	select XORG_PROTO_GL
	help
	  Mesa is a 3-D graphics library with an API which is very
	  similar to that of OpenGL. See the project homepage for
	  details: 

		http://www.mesa3d.org/

choice 
	depends on MESALIB
	prompt "Select Driver"


config MESALIB_DRIVER_XLIB
	bool
	prompt "Xlib"

config MESALIB_DRIVER_DRI
	bool
	prompt "DRI"

config MESALIB_DRIVER_OSMESA
	bool
	prompt "OSMesa"

endchoice 

