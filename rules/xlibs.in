menuconfig XLIBS
	bool "xlibs                 "
	help
	  These are the X libraries from the X.org xlibs project. 

comment "Base Libraries"
	depends on XLIBS

config XLIBS_X11
	bool
	depends on XLIBS
	prompt "libX11"
	select XLIBS_PROTO_BIGREQSPROTO
	select XLIBS_PROTO_XPROTO
	select XLIBS_PROTO_XEXTPROTO
	select XLIBS_XTRANS
	select XLIBS_XAU
	select XLIBS_PROTO_XCMISCPROTO
	select XLIBS_PROTO_KBPROTO
	select XLIBS_PROTO_INPUTPROTO
	select XLIBS_XDMCP

config XLIBS_XAU
	bool
	depends on XLIBS
	prompt "Xau"

config XLIBS_XEXT
	bool
	depends on XLIBS
	prompt "Xext"

config XLIBS_XFONT
	bool
	depends on XLIBS
	prompt "Xfont"
	select XLIBS_FONTCACHE
	select XLIBS_FONTENC
	select FONTCONFIG22

config XLIBS_FONTCACHE
	bool
	depends on XLIBS
	prompt "fontcache"
	select XLIBS_X11
	select XLIBS_XEXT
	select XLIBS_PROTO_FONTCACHEPROTO
	select XLIBS_PROTO_FONTSPROTO

config XLIBS_FONTENC
	bool
	depends on XLIBS
	prompt "fontenc"

config XLIBS_XTRANS
 	bool
 	depends on XLIBS
 	prompt "xtrans"
 
