config XGDB
	bool "Build Cross GDB"

config GDBSERVER
	bool "Build gdbserver for target"

config GDBSERVER_SHARED
	bool "Build shared"
	default y
	depends on GDBSERVER
        select GLIBC_THREAD_DB

config GDB
	bool "Build GDB for target"

config GDB_SHARED
	bool "Build shared"
	default y
	depends on GDB
        select GLIBC_LIBM

choice
	prompt "Select term library"
	default GDB_TERMCAP
	depends on GDB

	config GDB_TERMCAP
		bool "termcap"
                select TERMCAP

	config GDB_NCURSES
		bool "ncurses"
                select NCURSES
endchoice

config GDB_WRAPPERS
	bool "Build cross-GDB wrapper"
	help
	  Creates wrapper scripts in $PTXCONF_PREFIX/bin which preset
	  all necessary preferences to use the cross debugger. 
