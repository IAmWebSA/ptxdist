config INITMETHOD_BBINIT_LINK_BANNER
	string
	depends on INITMETHOD_BBINIT_ETC_INITD_BANNER
	prompt "banner"
	default "S99banner"

config INITMETHOD_BBINIT_LINK_LOGROTATE
