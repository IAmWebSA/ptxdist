menu "flash                         "

config BOARDSETUP_FLASH_START
	string
	default "0xff000000"

config BOARDSETUP_FLASH_SIZE
	string
	default "16M"

config BOARDSETUP_FLASH_BLOCKSIZE
	string
	default "128k"

comment ""
comment "Partition sizes can be in decimal or in hex (0x) with"
comment "an optional k|M for kilobytes or megabytes"
comment "A partition size of 0 means that the remaining space"
comment "is used for a partition"
comment ""

config BOARDSETUP_FLASH_PART1_SIZE
	string
	prompt "partition 1 size"
	default "256k"

config BOARDSETUP_FLASH_PART1_NAME
	string
	prompt "partition 1 name"
	default "ubootl"

config BOARDSETUP_FLASH_PART2_SIZE
	string
	prompt "partition 2 size"
	default "1792k"

config BOARDSETUP_FLASH_PART2_NAME
	string
	prompt "partition 2 name"
	default "kernel"

config BOARDSETUP_FLASH_PART3_SIZE
	string
	prompt "partition 3 size"
	default "13312k"

config BOARDSETUP_FLASH_PART3_NAME
	string
	prompt "partition 3 name"
	default "jffs2"

config BOARDSETUP_FLASH_PART4_SIZE
	string
	prompt "partition 4 size"
	default "256k"

config BOARDSETUP_FLASH_PART4_NAME
	string
	prompt "partition 4 name"
	default "uboot"

config BOARDSETUP_FLASH_PART5_SIZE
	string
	depends on BOARDSETUP_FLASH_PART4_SIZE != 0x0
	prompt "partition 5 size"
	default "128k"

config BOARDSETUP_FLASH_PART5_NAME
	string
	depends on BOARDSETUP_FLASH_PART4_SIZE != 0x0
	prompt "partition 5 name"
	default "oftree"

config BOARDSETUP_FLASH_PART6_SIZE
	string
	depends on BOARDSETUP_FLASH_PART5_SIZE != 0x0
	depends on BOARDSETUP_FLASH_PART4_SIZE != 0x0
	prompt "partition 6 size"
	default 0x0

config BOARDSETUP_FLASH_PART6_NAME
	string
	depends on BOARDSETUP_FLASH_PART5_SIZE != 0x0
	depends on BOARDSETUP_FLASH_PART4_SIZE != 0x0
	prompt "partition 6 name"
	default "space"
endmenu

