choice
	prompt "Bootloader for automated tests"
	help
	  Select the bootloader which is used for automated tests.
	  If you build a bootloader your choices are limited to that.

	config TEST_BOOTLOADER_U_BOOT
		bool "U-Boot"
		depends on (!GRUB && !U_BOOT && !U_BOOT_V2) || U_BOOT

	config TEST_BOOTLOADER_U_BOOT_V2
		bool "U-Boot V2"
		depends on (!GRUB && !U_BOOT && !U_BOOT_V2) || U_BOOT_V2

	config TEST_BOOTLOADER_GRUB
		bool "not supported: grub"
		depends on GRUB

	config TEST_BOOTLOADER_NONE
		bool "none"
		depends on (!GRUB && !U_BOOT && !U_BOOT_V2)

endchoice

config TEST_BOOTLOADER
	string
	default "u_boot"	if TEST_BOOTLOADER_U_BOOT
	default "u_boot_v2"	if TEST_BOOTLOADER_U_BOOT_V2
	default "grub"		if TEST_BOOTLOADER_GRUB
	default "none"		if TEST_BOOTLOADER_NONE
